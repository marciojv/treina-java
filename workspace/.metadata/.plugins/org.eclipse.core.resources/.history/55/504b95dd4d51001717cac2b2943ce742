    <script type="text/javascript">
 
        // Resolva seu exercício ABAIXO

        // Esconde o(s) elemento(s) com ID toc 
        $( function(){
        	$("#toc").hide();
        	
        	//Adiciona o evento onclick com a função Show
        	$("#btContents").click(function() {
        		$("#toc").show();
        	});
        	
        	
        	//Adiciona o evento onclick com a função Hide
        	$("#btHideContents").click(function() {
        		$("#toc").hide();
        	});
        	
        	//Intercala no Evento onclick entre Show e Hide
        	$("#btShowHideContents").click(function() {
        		$("#toc").toggle();
        	});
        	
        	$(".external").css("border", "3px solid red");
 
           	$(".header").css("border", "3px solid yellow").show("slow");
            
        })
               

        // Resolva seu exercício ACIMA
    </script>
</head>
